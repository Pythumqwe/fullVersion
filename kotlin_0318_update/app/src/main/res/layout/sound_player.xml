<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Kotlin_0318_update.AppWidget.Container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Kotlin_0318_update.AppWidgetContainer">


    <TextView
        android:id="@+id/widget_left_time_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="00:00/00:00" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:layout_marginHorizontal="2dp"
            android:id="@+id/widget_last_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="last" />

        <Button
            android:layout_marginHorizontal="2dp"
            android:id="@+id/widget_control_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="play" />

        <Button
            android:layout_marginHorizontal="2dp"
            android:id="@+id/widget_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="next" />
    </LinearLayout>
</LinearLayout>